				@Html.ValidationMessageFor(model => model.Alumno.Tel_alum, "", new { @class = "text-danger" })
			</div>
		</div>


		@Html.DropDownListFor(model => model.Ubigeo.Departamentos, new SelectList(Model.Ubigeo.Departamentos, "IdDepa", "Departamento"), "-- Seleccione Departamento --", new { @class = "form-control" })

		@Html.DropDownListFor(model => model.Ubigeo.Provincias, new SelectList(Model.Ubigeo.Provincias, "IdProv", "Provincia"), "-- Seleccione Provincia --", new { @class = "form-control" })

		@Html.DropDownListFor(model => model.Ubigeo.Distritos, new SelectList(Model.Ubigeo.Distritos, "IdDis", "Distrito"), "-- Seleccione Distrito --", new { @class = "form-control" })

	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Create" class="btn btn-default" />
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}