@model SIS_MAT_MVC.Models.AlumnoModel

@{
    ViewBag.Title = "Details";
}

<h2 class="mt-3">Detalle de Alumno</h2>

<div>
	<hr />
	<div class="col-md-10">
		@if (Model.Alumno.Foto_alum != null)
		{
			<img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Alumno.Foto_alum))" alt="Imagen" style="width: 200px; height: 200px;" />
		}
		else
		{
			<span></span>
		}
	</div>
	<div class="row mt-3">
		<div class="col-md-6">
			<dl class="dl-horizontal">
				<dt>
					@Html.DisplayNameFor(model => model.Alumno.Nom_alum)
				</dt>
				<dd>
					@Html.DisplayFor(model => model.Alumno.Nom_alum)
				</dd>
				<dt>
					@Html.DisplayNameFor(model => model.Alumno.Ape_Alum)
				</dt>
				<dd>
					@Html.DisplayFor(model => model.Alumno.Ape_Alum)
				</dd>
				<dt>
					@Html.DisplayNameFor(model => model.Alumno.Dni_alum)
				</dt>
				<dd>
					@Html.DisplayFor(model => model.Alumno.Dni_alum)
				</dd>
				<dt>
					@Html.DisplayNameFor(model => model.Alumno.Tel_alum)
				</dt>
				<dd>
					@Html.DisplayFor(model => model.Alumno.Tel_alum)
				</dd>
			</dl>
		</div>
		<div class="col-md-6">
			<dl class="dl-horizontal">
				<dt>
					@Html.DisplayNameFor(model => model.Alumno.Departamento)
				</dt>
				<dd>
					@Html.DisplayFor(model => model.Alumno.Departamento)
				</dd>
				<dt>
					@Html.DisplayNameFor(model => model.Alumno.Distrito)
				</dt>
				<dd>
					@Html.DisplayFor(model => model.Alumno.Distrito)
				</dd>
				<dt>
					@Html.DisplayNameFor(model => model.Alumno.Estado)
				</dt>
				<dd>
					@Html.DisplayFor(model => model.Alumno.Estado)
				</dd>
			</dl>
		</div>
	</div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Alumno.Id_alum }) |
    @Html.ActionLink("Back to List", "Alumnos")
</p>
