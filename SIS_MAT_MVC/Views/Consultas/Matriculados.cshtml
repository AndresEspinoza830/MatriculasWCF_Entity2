@model SIS_MAT_MVC.ProxyConsultas.CuotaDC

@{
	ViewBag.Title = "Index";
}

<h2 class="mt-3 mb-4">Consulta Matriculados entre dos fechas:</h2>
@using (Html.BeginForm("ConsultaMatriculados", "Consultas", FormMethod.Get))
{
	<div class="form-row mb-4 mt-2">
		<div class="form-group col-md-6">
			<label for="fechaInicio">Fecha de Inicio:</label>
			<input type="date" class="form-control" id="fechaInicio" name="fechaInicio" />
		</div>

		<div class="form-group col-md-6">
			<label for="fechaFin">Fecha de Fin:</label>
			<input type="date" class="form-control" id="fechaFin" name="fechaFin" />
		</div>

		<button type="submit" class="btn btn-primary mt-3">Consultar</button>
	</div>
}
<table class="table">
	<tr>
		<th>
			Nombre Completo
		</th>
		<th>
			DNI
		</th>
		<th>
			Sexo
		</th>
		<th>
			Telefono
		</th>
		<th>
			Carrera
		</th>
	</tr>
	@foreach (var item in ViewBag.Matriculados)
	{
		<tr>
			<td>
				@item.Nom_alum @item.Ape_Alum
			</td>
			<td>
				@item.Dni_alum
			</td>
			<td>
				@if (string.Equals(item.Sexo, "M", StringComparison.OrdinalIgnoreCase))
				{
					@:Masculino
				}
				else
				{
					@:Femenino
				}
			</td>
			<td>
				@item.Tel_alum
			</td>
			<td>
				@item.Nom_carrera
			</td>
		</tr>
	}
</table>