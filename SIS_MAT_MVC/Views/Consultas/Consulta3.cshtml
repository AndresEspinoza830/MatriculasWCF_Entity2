@model IEnumerable<SIS_MAT_MVC.ProxyConsultas.BloqueDC>

@{
    ViewBag.Title = "Consulta3";
}

<h2>Consulta de bloques con vacantes</h2>

@using (Html.BeginForm("Consulta3", "Consultas", FormMethod.Post))
{
    <div class="form-group">
        <p>
            @Html.TextBox("Vacantes", null, new { type = "number", placeholder = "Ingresa un número minimo de vacantes" })
            <input type="submit" value="Buscar" class="btn btn-primary text-white" />
        </p>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_bloque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_Profesor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Horario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tip_Bloque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vacantes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total_matriculados)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
    </tr>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_bloque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_Profesor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Horario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tip_Bloque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vacantes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total_matriculados)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
            </tr>
        }
    }
</table>
